<%- if controller_name != 'sessions' %>
  <%= link_to "Log in", new_session_path(resource_name) %><br /> <!-- Display a "Log in" link if the current controller is not 'sessions'. The link points to the new session path. -->
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Sign up", new_registration_path(resource_name) %><br /> <!-- Display a "Sign up" link if the application allows user registration (registerable is enabled) and the current controller is not 'registrations'. The link points to the new registration path. -->
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Forgot your password?", new_password_path(resource_name) %><br /> <!-- Display a "Forgot your password?" link if the application supports password recovery (recoverable is enabled), and the current controller is neither 'passwords' nor 'registrations'. The link points to the new password path. -->
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %><br /> <!-- Display a "Didn't receive confirmation instructions?" link if email confirmation is enabled (confirmable is enabled), and the current controller is not 'confirmations'. The link points to the new confirmation path. -->
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %><br /> <!-- Display a "Didn't receive unlock instructions?" link if account lock is enabled (lockable is enabled), email-based unlock strategy is enabled, and the current controller is not 'unlocks'. The link points to the new unlock path. -->
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= button_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false } %><br /> <!-- Display buttons for each OmniAuth provider if OmniAuth is enabled (omniauthable). The buttons use the OmniAuth provider's name and link to the respective authorization path. The 'turbo: false' data attribute ensures that TurboDrive is disabled for these buttons. -->
  <% end %>
<% end %>
